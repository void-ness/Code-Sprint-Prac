a=int(input())  #inputs no. of test cases
d=[]
for i in range(a):
  b=input()
  c=b.split()
  a1=int(c[0])
  a2=int(c[1])
  a3=a1//a2 
  trips=a1+a3+(a3//a2)        #almmost correct code but will work in few test cases only #mistake in calculations part only
  d.append(trips)

for j in d:
  print(str(j))
